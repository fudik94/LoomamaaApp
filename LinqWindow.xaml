<Window x:Class="LoomamaaApp.LinqWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LINQ Queries" Height="480" Width="700">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="LINQ: queries and statistics" FontSize="16" FontWeight="Bold" />

        <GroupBox Header="Summary by type (GroupBy)" Grid.Row="1" Margin="0,6,0,6">
            <DataGrid x:Name="GroupGrid" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Count" Binding="{Binding Count}"/>
                    <DataGridTextColumn Header="Avg Age" Binding="{Binding AvgAge, StringFormat=N1}"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Oldest per type" Grid.Column="0" Margin="0,0,6,0">
                <ListBox x:Name="OldestListBox"/>
            </GroupBox>

            <GroupBox Header="Above overall average age" Grid.Column="1" Margin="6,0,0,0">
                <ListBox x:Name="AboveAvgListBox"/>
            </GroupBox>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="RefreshButton" Content="Refresh" Width="100" Margin="0,0,8,0" Click="RefreshButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>