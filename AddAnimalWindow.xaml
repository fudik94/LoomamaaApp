<Window x:Class="LoomamaaApp.AddAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Liisa loom" Height="250" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Nimi :"/>
        <TextBox x:Name="NameTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Vanus:"/>
        <TextBox x:Name="AgeTextBox" Margin="0,0,0,5"/>

        <TextBlock Text="Tüüp:"/>
        <ComboBox x:Name="TypeComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="Cat"/>
            <ComboBoxItem Content="Dog"/>
            <ComboBoxItem Content="Monkey"/>
            <ComboBoxItem Content="Sheep"/>
            <ComboBoxItem Content="Pig"/>
        </ComboBox>

        <Button Content="Liisa" Click="AddButton_Click"/>
    </StackPanel>
</Window>
