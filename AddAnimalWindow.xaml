<Window x:Class="LoomamaaApp.AddAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lisa loom" Height="300" Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

	<StackPanel Margin="15">
		
		<TextBlock Text="Lisa Uus Loom"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

		
		<TextBlock Text="Nimi:" FontWeight="SemiBold"/>
		<TextBox x:Name="NameTextBox"
                 Margin="0,0,0,8"
                 ToolTip="Enter animal name"/>

		
		<TextBlock Text="Vanus:" FontWeight="SemiBold"/>
		<TextBox x:Name="AgeTextBox"
                 Margin="0,0,0,8"
                 ToolTip="Enter animal age (number only)"/>

		
		<TextBlock Text="Tüüp:" FontWeight="SemiBold"/>
		<ComboBox x:Name="TypeComboBox"
                  Margin="0,0,0,15"
                  ToolTip="Select animal type">
			<ComboBoxItem Content="Cat"/>
			<ComboBoxItem Content="Dog"/>
			<ComboBoxItem Content="Monkey"/>
			<ComboBoxItem Content="Sheep"/>
			<ComboBoxItem Content="Pig"/>
			<ComboBoxItem Content="Horse"/>
			<ComboBoxItem Content="Duck"/>
			<ComboBoxItem Content="Bear"/>
		</ComboBox>

		
		<Button Content="Lisa loom"
                Click="AddButton_Click"
                Background="#FF91C788"
                Padding="6"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Width="100"/>
	</StackPanel>
</Window>
