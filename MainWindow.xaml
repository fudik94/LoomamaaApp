<Window x:Class="LoomamaaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoomamaaApp" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="AnimalsListBox" Grid.Column="0" Grid.Row="0" Margin="5"
                 SelectionChanged="AnimalsListBox_SelectionChanged"/>

        <StackPanel Grid.Column="1" Grid.Row="0" Margin="5" VerticalAlignment="Top">
            <TextBlock Text="Nimi :" FontWeight="Bold"/>
            <TextBlock x:Name="NameTextBlock" Margin="0,0,0,5"/>
            <TextBlock Text="Vanus :" FontWeight="Bold"/>
            <TextBlock x:Name="AgeTextBlock" Margin="0,0,0,10"/>

            <TextBlock Text="Tooge toit :" FontWeight="Bold"/>
            <TextBox x:Name="FoodTextBox" Width="200" Margin="0,0,0,5"/>

            <WrapPanel Margin="0,5,0,5">
                <Button Content="Tee hääl 🎶" Click="MakeSoundButton_Click" Margin="0,0,5,0"/>
                <Button Content="Toida 🍖 " Click="FeedButton_Click" Margin="0,0,5,0"/>
            </WrapPanel>
            <WrapPanel Margin="0,5,0,5">
                <Button Content="Lisa loom ➕ " Click="AddAnimalButton_Click" Margin="0,0,5,0"/>
                <Button Content="Eemalda loom ❌ " Click="RemoveAnimalButton_Click" Margin="0,0,5,0"/>
                <Button Content="Crazy Action 🎉 " Click="CrazyActionButton_Click"/>
            </WrapPanel>
        </StackPanel>

        <ListBox x:Name="LogListBox" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="5"/>
    </Grid>
</Window>
